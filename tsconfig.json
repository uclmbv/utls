{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    /* type checking */
    "strict": true,
    /* modules */
    "module": "CommonJS",
    /* emit */
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "removeComments": true,
    /* interop constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    /* language and environment */
    "target": "ES6"
  }
}
